{
	"name": "site-scaffold",
	"description": "Site Repo",
	"prefer-stable": true,
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require-dev": {
		"wpackagist-plugin/debug-bar": "*",
		"wpackagist-plugin/debug-bar-console": "*",
		"wpackagist-plugin/rewrite-rules-inspector": "*",
		"wpackagist-plugin/query-monitor": "*",
		"wpackagist-plugin/debug-bar-elasticpress": "*",
		"wpackagist-plugin/user-switching": "*"
	},
	"require": {
		"wpackagist-plugin/classic-editor": "1.4",
		"wpackagist-plugin/elasticpress": "~2.8.2",
	},
	"extra": {
		"installer-paths": {
			"themes/{$name}": [
				"type:wordpress-theme"
			],
			"plugins/{$name}/": [
				"type:wordpress-plugin"
			]
		}
	}
}
